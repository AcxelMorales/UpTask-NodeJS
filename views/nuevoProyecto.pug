extends layout

block contenido
  .contenido-principal
    h1= nombrePagina

    if errores
      each e in errores
        .alerta.error= e.texto

    form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
      .campo
        label(for="nombre") Nombre Proyecto:
        input(type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto" autocomplete="off")
      .campo.enviar
        input.boton(type="submit" value="Agregar")
